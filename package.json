    "@emotion/styled": "11.14.1",
    "@mdx-js/loader": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@next/mdx": "15.5.2",
    "framer-motion": "11.18.2",
    "gray-matter": "4.0.3",
    "next": "15.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.3.1",
    "rehype-prism-plus": "2.0.1",
